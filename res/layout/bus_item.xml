<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/busLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/line2"
        android:layout_alignParentTop="true"
        android:src="@drawable/bus" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/busLogo"
        android:gravity="center"
        android:text="TextView"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/goTime"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/backTime"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_alignLeft="@id/goTime"
        android:layout_below="@+id/goTime"
        android:text="TextView" />

    <TextView
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/backTime"
        android:layout_alignLeft="@+id/line1"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#CCCCCC" />

</RelativeLayout>
