<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/newslistIcon"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:scaleType="centerInside"
        android:layout_marginRight="0.5dp"
        android:layout_marginLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/newslistTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/newslistIcon"
        android:layout_toRightOf="@+id/newslistIcon"
        android:paddingTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/newslistpreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/newslistIcon"
        android:layout_alignLeft="@+id/newslistTitle"
        android:paddingBottom="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="TextView"
        android:textColor="#CCCCCC" />

</RelativeLayout>
